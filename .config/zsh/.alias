#!/bin/zsh
# Aliases for common commands

# List commands 
alias l='ls -alhG'
alias ll='ls -lG'
alias lm='ls -alG | more'

# Program substitutions 
alias vim='nvim'
alias lua='luajit'
alias tmux='tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf'
alias brewdeps='brew leaves | xargs brew deps --installed --for-each | sed "s/^.*:/$(tput setaf 4)&$(tput sgr0)/"'
alias j='_zlua'
alias jh='_zlua -I -t .'
alias lg='lazygit'
# alias cleanup='brew cleanup --prune 0 && conda clean -a && rm -rf $XDG_CONFIG_HOME/rust/cargo/registry && docker system prune -a'

cleanup () {
    brew cleanup --prune 0
    conda clean -a
    rm -rf $XDG_CONFIG_HOME/rust/cargo/registry
    docker system prune -a
}


