#!/bin/zsh

# Place in /etc/zshenv on new OS install
# export ZDOTDIR="$HOME/.config/zsh"
# export ADOTDIR="$HOME/.config/antigen"

# Preventing history files from being created
export LESSHISTFILE=" "

# Setting config location
export XDG_CONFIG_HOME="$HOME/.config"

# Setting sheldon config path
export SHELDON_CONFIG_DIR="$HOME/.config/sheldon"

# Setting starship config path
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"

# Setting GOPATH 
export GOPATH="$HOME/.config/go"
export GOBIN="$GOPATH/bin"
export PATH=$PATH:$GOBIN

# Setting JAVA_HOME 
export JAVA_HOME="/usr/local/opt/openjdk/libexec/openjdk.jdk/Contents/Home"

# Setting rustup and cargo paths
export RUSTUP_HOME="$HOME/.config/rust/rustup"
export CARGO_HOME="$HOME/.config/rust/cargo"
export CARGO_BIN="$CARGO_HOME/bin"
export PATH=$CARGO_BIN:$PATH
