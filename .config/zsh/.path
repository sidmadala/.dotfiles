#!/bin/zsh

# Place in /etc/zshenv on new OS install
# export ZDOTDIR="$HOME/.config/zsh"
# export ADOTDIR="$HOME/.config/antigen"

# Preventing history files from being created
export LESSHISTFILE=" "

# Setting GOPATH for binary installation
export GOPATH="$HOME/.config/go"
export GOBIN="$GOPATH/bin"
export PATH=$PATH:$GOBIN

# Setting JAVA_HOME 
export JAVA_HOME="/Library/Java/JavaVirtualMachines/openjdk-14.jdk/Contents/Home"

# Setting rustup and cargo paths
export RUSTUP_HOME="$HOME/.config/rust/rustup"
export CARGO_HOME="$HOME/.config/rust/cargo"
export CARGO_BIN="$CARGO_HOME/bin"
export PATH=$CARGO_BIN:$PATH

